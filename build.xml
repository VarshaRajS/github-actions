<project name="StringCompression" default="compile" basedir=".">
    
    <property name="stringCompression.java.dir" value="src"/>
    <property name="build.dir" value="build"/>
    <property name="main.class" value="stringCompression"/> 

    <target name="init">
        <mkdir dir="${build.dir}"/>
    </target>

    <target name="compile" depends="init">
        <javac srcdir="${src.dir}" destdir="${build.dir}" includeantruntime="false"/>
    </target>

    <target name="run" depends="compile">
        <java classname="${main.class}" classpath="${build.dir}"/>
    </target>

</project>
